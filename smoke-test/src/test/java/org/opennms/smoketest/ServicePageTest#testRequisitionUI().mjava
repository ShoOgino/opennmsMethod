        setTreeFieldsAndSave("foreignSourceEditForm", select("key", "port"), type("value", "8080"));
        waitForPageToLoad();

        clickAndWait("//input[@value='Done']");
        String rcOfEditAnchor = "id=edit_req_anchor_" + REQUISITION_NAME;
