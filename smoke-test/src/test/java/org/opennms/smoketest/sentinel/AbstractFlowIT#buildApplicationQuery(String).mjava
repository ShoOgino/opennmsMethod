    private static String buildApplicationQuery(String application) {
        final String query = String.format("{\n" +
                "  \"query\": {\n" +
                "    \"match\": {\n" +
                "      \"netflow.application\": {\n" +
                "        \"query\": \"%s\"\n" +
                "      }\n" +
                "    }\n" +
                "  }\n" +
                "}", application);
        return query;
    }

