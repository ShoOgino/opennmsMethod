    private Response getApplicationViewResponse(final String query) {
        return given().log().ifValidationFails()
                .body(query)
                .contentType(ContentType.JSON)
                .post("{container_id}/{namespace}", "application", "application")
                .then()
                .log().ifValidationFails()
                .statusCode(200)
                .contentType(ContentType.JSON)
                .extract().response();
    }

