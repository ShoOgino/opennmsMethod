    /**
     * Updates the sendmail message object
     *
     * @param message the message object
     */
    public void update(SendmailMessage message) {
        if (m_from != null) {
            message.setFrom(m_from);
        }
        if (m_to != null) {
            message.setTo(m_to);
        }
        if (m_subject != null) {
            message.setSubject(m_subject);
        }
        if (m_body != null) {
            message.setBody(m_body);
        }
    }

