    public synchronized void stop() {
        started.set(false);
        if (kieSession != null) {
            kieSession.halt();
            kieSession = null;
        }
        if (kieContainer != null) {
            kieContainer.dispose();
            kieContainer = null;
        }
        if (thread != null) {
            thread.interrupt();
            thread = null;
        }
    }

