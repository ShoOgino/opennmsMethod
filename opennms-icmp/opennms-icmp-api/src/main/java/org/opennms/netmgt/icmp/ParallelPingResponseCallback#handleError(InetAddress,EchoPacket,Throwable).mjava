    /** {@inheritDoc} */
    @Override
    public void handleError(InetAddress address, EchoPacket request, Throwable t) {
        try {
            if (request != null) {
                m_responseTimes[request.getSequenceNumber()] = null;
            }
            m_error = t;
        } finally {
            m_latch.countDown();
        }
    }

