    /** {@inheritDoc} */
    @Override
    public void start(final Queue<PingReply> replyQueue) {
        Thread socketReader = new Thread("ICMP-Socket-Reader") {

            public void run() {
                try {
                    processPackets(replyQueue);
                } catch (Throwable t) {
                    LogUtils.errorf(this, t, "Unexpected exception on Thread %s!", this);
                }
            }
        };
        socketReader.start();
    }

