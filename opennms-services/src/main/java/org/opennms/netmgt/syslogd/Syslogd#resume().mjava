    public void resume() {
        // Set the category prefix
        ThreadCategory.setPrefix(LOG4J_CATEGORY);
        if (m_status != PAUSED) {
            return;
        }

        m_status = RESUME_PENDING;

        Category log = ThreadCategory.getInstance(getClass());
        m_status = RUNNING;

        log.debug("Syslogd resumed");

    }

