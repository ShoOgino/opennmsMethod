    /**
     * Pauses Syslogd
     */
    public void pause() {
        // Set the category prefix
        ThreadCategory.setPrefix(LOG4J_CATEGORY);
        if (!isRunning()) {
            return;
        }
        Category log = ThreadCategory.getInstance();
        setStatus(PAUSE_PENDING);

        log.debug("Processor paused");

        setStatus(PAUSED);

        log.debug("Syslogd paused");

    }

