    private void handleScheduledOutagesChanged(Event event) {
        try {
            log().info("Reloading Collectd config factory");
            CollectdConfigFactory.reload();
            refreshServicePackages();
        } catch (Throwable e) {
            log().error(
                        "Failed to reload CollectdConfigFactory because "
                                + e.getMessage(), e);
        }
    }

