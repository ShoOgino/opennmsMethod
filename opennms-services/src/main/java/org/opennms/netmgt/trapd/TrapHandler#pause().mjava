    /**
     * Pauses Trapd
     */
    public void pause() {
        if (m_status != RUNNING) {
            return;
        }

        m_status = PAUSE_PENDING;

        log().debug("Calling pause on processor");

        m_processor.pause();

        log().debug("Processor paused");

        m_status = PAUSED;

        log().debug("Trapd paused");
    }

