    /**
     * Closes the client's socket connection to the DHCP daemon.
     * 
     * @throws IOException
     *             if the socket close() method fails.
     */
    public void close() {
        ThreadCategory log = ThreadCategory.getInstance(Poller.class);
        try {
            if (log.isDebugEnabled()) {
                log.debug("Closing connection");
            }
            m_ins.close();
            m_outs.close();
            m_connection.close();
        } catch (Throwable ex) {
        }
    }

