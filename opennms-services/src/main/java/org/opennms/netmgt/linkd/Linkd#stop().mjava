	public synchronized void stop() {

		m_status = STOP_PENDING;
		// Stop the scheduler
		m_scheduler.stop();
		// Stop the broadcast event receiver
		//
		m_receiver.close();

		m_scheduler = null;
		m_status = STOPPED;
		Category log = ThreadCategory.getInstance();
		if (log.isInfoEnabled())
			log.info("stop: Linkd stopped");

	}

