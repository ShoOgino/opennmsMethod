    /**
     * <p>
     * unschedule
     * </p>
     */
    @Override
    public void unschedule() {
        if (m_scheduler == null)
            throw new IllegalStateException(
                    "unschedule: Cannot schedule a service whose scheduler is set to null");
        if (isRunned) {
            m_scheduler.unschedule(this, m_interval);
        } else {
            m_scheduler.unschedule(this, m_interval
                                   + m_initial_sleep_time + discovery_delay);
        }
    }

