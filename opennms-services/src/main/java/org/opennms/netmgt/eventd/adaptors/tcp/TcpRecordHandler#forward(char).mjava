    /**
     * forwards the characters to the attached pipe.
     */
    private void forward(final char ch) throws IOException {
        try {
            if (m_out != null) {
                m_out.write((int) ch);
            }
        } catch (final IOException e) {
        	LogUtils.debugf(this, e, "An I/O error occured.");
            throw e;
        }
    }

