    /**
     * Stops and joins the context.
     */
    void stop() throws InterruptedException {
        m_stop = true;
        if (m_context != null) {
        	LogUtils.debugf(this, "Interrupting and joining the thread context %s", m_context.getName());

            m_context.interrupt();
            m_context.join();

            LogUtils.debugf(this, "Context stopped and joined");
        }
    }

