    /**
     * <p>onStop</p>
     */
    protected void onStop() {
        log().debug("calling shutdown on tcp/udp listener threads");

        // Stop listener threads
        for (EventReceiver eventReceiver : m_eventReceivers) {
            eventReceiver.stop();
        }

        if (m_receiver != null) {
            m_receiver.close();
        }

        log().debug("shutdown on tcp/udp listener threads returned");
    }

