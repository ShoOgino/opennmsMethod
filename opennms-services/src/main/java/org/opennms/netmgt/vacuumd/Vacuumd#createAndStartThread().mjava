    private void createAndStartThread() {
        m_thread = new Thread(new Runnable() {
            @Override
            public void run() {
                final Map<String,String> mdc = Logging.getCopyOfContextMap();
                Logging.putPrefix("vacuumd");
                try {
                    this.run();
                } finally {
                    Logging.setContextMap(mdc);
                }
            }
        }, "Vacuumd-Thread");
        m_thread.start();
    }

