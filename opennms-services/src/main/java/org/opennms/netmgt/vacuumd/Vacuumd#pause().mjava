    /*
     * (non-Javadoc)
     * 
     * @see org.opennms.core.fiber.PausableFiber#pause()
     */
    public void pause() {
        if (!isRunning())
            return;

        ThreadCategory.setPrefix(LOG4J_CATEGORY);
        Category log = ThreadCategory.getInstance(getClass());
        log.info("Pausing Vacuumd");

        setStatus(PAUSE_PENDING);
        m_scheduler.pause();
        m_stopped = true;
        setStatus(PAUSED);
    }

