    private void resetReader(IOException ex) {
        if (ex != null) {
            m_log.error("resetReader: connection failure.", ex);
        }
        try {
            m_reader.close();
        } catch (IOException e) { 
        } finally {
            m_reader = null;
        }
        try {
            m_tl1Socket.close();
        } catch (IOException e) {
            m_tl1Socket = null;
        }
    }

