    private void startTimer() {
        if (m_timer != null) {
            m_timer.cancel();
        }
        m_timer = new Timer("Discovery.Pinger", true);

        TimerTask task = new TimerTask() {

            @Override
            public void run() {
                doPings();
            }

        };
        m_timer.scheduleAtFixedRate(task, initialSleepTime, discoveryInterval);

    }

