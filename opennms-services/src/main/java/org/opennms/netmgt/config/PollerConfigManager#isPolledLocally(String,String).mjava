    public boolean isPolledLocally(String ipaddr, String svcName) {
        if (!serviceMonitored(svcName)) {
            return false;
        }
        
        for(Package pkg : packages()) {
            if (serviceInPackageAndEnabled(svcName, pkg) && interfaceInPackage(ipaddr, pkg)) {
                return true;
            }
        }
        
        return false;
    }

