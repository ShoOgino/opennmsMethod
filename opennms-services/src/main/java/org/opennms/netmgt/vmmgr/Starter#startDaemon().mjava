    public void startDaemon() {
        configureLog4j();
        
        setLogPrefix();
        
        mx4j.log.Log.redirectTo(new mx4j.log.Log4JLogger());
        
        loadGlobalProperties();
        
        setupProperties();

        MBeanServer server = MBeanServerFactory.createMBeanServer("OpenNMS");
        start(server);
    }

