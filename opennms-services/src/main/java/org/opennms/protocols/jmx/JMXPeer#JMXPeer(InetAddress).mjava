    /**
     * Class constructor. Constructs a JMXPeer to the passed remote agent.
     *
     * @param peer
     *            The remote internet address
     */
    public JMXPeer(InetAddress peer) {
        m_peer = peer;
        m_port = defaultRemotePort;
        m_timeout = defaultTimeout;
        m_retries = defaultRetries;
    }

