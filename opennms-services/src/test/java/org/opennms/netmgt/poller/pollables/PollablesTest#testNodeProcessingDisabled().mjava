    @Test
    public void testNodeProcessingDisabled() {
        m_pollContext.setNodeProcessingEnabled(false);

        // anticipate nothing

        pDot1Smtp.run();

        verifyAnticipated();

        anticipateDown(mDot1Smtp);

        mDot1Smtp.bringDown();

        pDot1Smtp.run();

        verifyAnticipated();

        // anticipate nothing since its still down

        pDot1Smtp.run();

        verifyAnticipated();

        anticipateUp(mDot1Smtp);

        mDot1Smtp.bringUp();

        pDot1Smtp.run();

        verifyAnticipated();

    }

