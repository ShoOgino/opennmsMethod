    @Test
    public void testLockTimeout() throws Exception {
        AtomicInteger m_lockCount = new AtomicInteger(0);

        final Runnable r = new Runnable() {
            @Override
            public void run() {
                assertEquals(1, m_lockCount.incrementAndGet());
                try { Thread.sleep(5000); } catch (InterruptedException e) {}
                assertEquals(0, m_lockCount.decrementAndGet());
            }
        };

        final Runnable locker = new Runnable() {
            @Override
            public void run() {
                pNode1.withTreeLock(r);
            }
        };

        final Runnable lockerWithTimeout = new Runnable() {
            @Override
            public void run() {
                try {
                    pNode1.withTreeLock(r, 500);
                    fail("Expected LockUnavailable");
                } catch (LockUnavailable e) {
                    MockUtil.println("Received expected exception "+e);
                }
            }
        };

        Thread[] threads = new Thread[5];
        threads[0] = new Thread(locker);
        threads[0].start();
        for(int i = 1; i < 5; i++) {
            threads[i] = new Thread(lockerWithTimeout);
            threads[i].start();
        }

        for(int i = 0; i < 5; i++) {
            threads[i].join();
        }

    }

