        @Override
        public void beforeBroadcast(final Event event) {
            if (!m_ueis.contains(event.getUei())) {
                // pass
            } else {
                try {
                    // stall
                    m_latch.countDown();
                    m_latch.await();
                } catch (InterruptedException e) {
                    // Fail if we're interrupted
                    throw new RuntimeException(e);
                }
            }
        }

