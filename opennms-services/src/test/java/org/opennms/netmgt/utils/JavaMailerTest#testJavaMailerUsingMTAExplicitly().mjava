    public final void testJavaMailerUsingMTAExplicitly() throws Exception {
        JavaMailer jm = createMailer("Test message from testJavaMailer using MTA explicitly");
        
        if (jm.isSmtpSsl()) {
        	return;
        }
        jm.setUseJMTA(true);
        
        jm.mailSend();
    }

