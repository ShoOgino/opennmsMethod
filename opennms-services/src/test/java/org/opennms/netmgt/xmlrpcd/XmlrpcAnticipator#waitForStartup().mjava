    private void waitForStartup() throws IOException {
        boolean keepRunning = true;
        Socket s = null;
        
        while (keepRunning) {
            try {
                Thread.sleep(10);
            } catch (InterruptedException e) {
                // do nothing
            }
            
            try {
                s = new Socket("localhost", m_port);
                keepRunning = false;
                
                sendCheckCall(s);
            } catch (ConnectException e) {
                // do nothing
            } finally {
                if (s != null) {
                    s.close();
                }
            }
        }
    }

