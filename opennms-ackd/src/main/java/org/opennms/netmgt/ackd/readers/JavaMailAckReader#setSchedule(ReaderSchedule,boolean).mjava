    /**
     * Gets a new schedule and optionally reschedules <code>MailAckProcessor</code>
     * @param schedule
     * @param reschedule
     */
    public void setSchedule(ReaderSchedule schedule, boolean reschedule) {
        synchronized (m_lock) {
            m_schedule = schedule;
            if (reschedule) {
                m_executor.remove(m_mailAckProcessor);
                scheduleReads();
            }
        }
    }

