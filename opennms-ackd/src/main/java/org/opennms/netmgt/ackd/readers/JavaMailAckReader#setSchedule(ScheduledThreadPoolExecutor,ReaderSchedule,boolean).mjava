    /**
     * Gets a new schedule and optionally reschedules <code>MailAckProcessor</code>
     * @param schedule
     * @param reschedule
     */
    public void setSchedule(final ScheduledThreadPoolExecutor executor, ReaderSchedule schedule, boolean reschedule) {
        synchronized (m_lock) {
            m_schedule = schedule;
            
            if (reschedule) {
                stop();
                start(executor);
            }
        }
    }

