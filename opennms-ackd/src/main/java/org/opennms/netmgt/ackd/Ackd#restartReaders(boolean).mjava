    /**
     * <p>restartReaders</p>
     *
     * @param reloadConfigs a boolean.
     */
    protected void restartReaders(boolean reloadConfigs) {
        LOG.info("restartReaders: restarting readers...");
        stopReaders();
        startReaders(reloadConfigs);
        LOG.info("restartReaders: readers restarted.");
        
    }

