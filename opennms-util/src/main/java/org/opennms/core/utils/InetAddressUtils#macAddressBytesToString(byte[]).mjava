    public static String macAddressBytesToString(byte[] macAddress) {
        if (macAddress.length != 6) {
            throw new IllegalArgumentException("Cannot decode MAC address: '" + macAddress + "'");
        }
        
        return String.format(
            //"%02X:%02X:%02X:%02X:%02X:%02X", 
            "%02x%02x%02x%02x%02x%02x", 
            macAddress[0],
            macAddress[1],
            macAddress[2],
            macAddress[3],
            macAddress[4],
            macAddress[5]
        );
    }

