        public void update(Map<String, String> props) throws IOException {
            w.lock();
            try {
                boolean save = false;
                for(Entry<String, String> e : props.entrySet()) {
                    if (!e.getValue().equals(m_properties.get(e.getKey()))) {
                        m_properties.put(e.getKey(), e.getValue());
                        save = true;
                    }
                }
                if (save) {
                    write();
                }
            } finally {
                w.unlock();
            }
        }

