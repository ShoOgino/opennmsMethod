    public void afterSaveFileSets(File baseDir, String target, PomBuilder builder) throws Exception {
        super.afterSaveFileSets(baseDir, target, builder);
        
        if (builder.getResourceByDirectory("src/main/resources") == null) {
            Resource unfiltered = new Resource();
            unfiltered.setDirectory("src/main/resources");
            builder.addResource(unfiltered);
        }
        
        if (builder.getResourceByDirectory("src/main/filtered") == null) {
            Resource filtered = new Resource();
            filtered.setDirectory("src/main/filtered");
            filtered.setFiltering(true);
            
            builder.addResource(filtered);
        }
        
    }

