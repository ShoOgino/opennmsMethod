    public void testScan() {
    	DirectoryScanner scanner = new DirectoryScanner();
    	scanner.setBasedir("src/main");
    	scanner.addDefaultExcludes();
    	scanner.setIncludes(new String[] { "**/*.xsd" });
    	scanner.scan();
    	
    	assertEquals(1, scanner.getIncludedFiles().length);
    }

