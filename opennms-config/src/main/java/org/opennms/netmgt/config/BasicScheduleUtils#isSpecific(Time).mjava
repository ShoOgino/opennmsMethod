    /**
     * <p>isSpecific</p>
     *
     * @param time a {@link org.opennms.netmgt.config.common.Time} object.
     * @return a boolean.
     */
    public static boolean isSpecific(final Time time) {
        if (time.getDay() == null) {
            return SPECIFIC_DATE_PATTERN.matcher(time.getBegins()).matches();
        }
        return false;
    }

