    public void setContactInfo(final String userId, final ContactType contactType, final String contactValue) throws Exception {
    	 update();
         m_writeLock.lock();
         
         try {
             final User user = _getUser(userId);
             if (user != null) {
            	 _setContact(user, contactType, contactValue);
             }
             _saveCurrent();
         } finally {
             m_writeLock.unlock();
         }
	}

