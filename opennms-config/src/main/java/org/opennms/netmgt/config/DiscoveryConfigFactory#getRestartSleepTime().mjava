    /**
     * <p>getRestartSleepTime</p>
     *
     * @return a long.
     */
    @Override
    public long getRestartSleepTime() {
        getReadLock().lock();
        try {
            return getConfiguration().getRestartSleepTime();
        } catch (final NullPointerException e) {
            return 86400000L;
        } finally {
            getReadLock().unlock();
        }
    }

