    /**
     * <p>getInitialSleepTime</p>
     *
     * @return a long.
     */
    @Override
    public long getInitialSleepTime() {
        getReadLock().lock();
        try {
            return getConfiguration().getInitialSleepTime();
        } catch (final NullPointerException e) {
            return 30000L;
        } finally {
            getReadLock().unlock();
        }
    }

