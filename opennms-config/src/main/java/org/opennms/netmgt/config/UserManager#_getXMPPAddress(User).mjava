    private String _getXMPPAddress(final User user) {
        if (user == null)
            return "";
        
        for (final Contact contact : user.getContacts()) {
        	if (contact != null && contact.getType().equals(ContactType.xmppAddress.toString())) {
        		return contact.getInfo();
        	}
        }
        
        return "";
    }

