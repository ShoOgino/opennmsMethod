    /**
     * <p>isMonthly</p>
     *
     * @param time a {@link org.opennms.netmgt.config.poller.outages.common.Time} object.
     * @return a boolean.
     */
    public static boolean isMonthly(final Time time) {
        return time.getDay().isPresent() && getDayOfWeekIndex(time.getDay().get()) == null; 
    }

