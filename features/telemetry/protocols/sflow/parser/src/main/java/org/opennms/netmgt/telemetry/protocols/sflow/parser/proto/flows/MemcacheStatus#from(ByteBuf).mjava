    public static MemcacheStatus from(final ByteBuf buffer) throws InvalidPacketException {
        final int value = (int) BufferUtils.uint32(buffer);
        switch (value) {
            case 0:
                return UNKNOWN;
            case 1:
                return OK;
            case 2:
                return ERROR;
            case 3:
                return CLIENT_ERROR;
            case 4:
                return SERVER_ERROR;
            case 5:
                return STORED;
            case 6:
                return NOT_STORED;
            case 7:
                return EXISTS;
            case 8:
                return NOT_FOUND;
            case 9:
                return DELETED;
            default:
                throw new InvalidPacketException(buffer, "Unknown value: {}", value);
        }
    }

