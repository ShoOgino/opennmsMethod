    public static AsPathSegmentType from(final ByteBuf buffer) throws InvalidPacketException {
        final int value = (int) BufferUtils.uint32(buffer);
        switch (value) {
            case 1:
                return AS_SET;
            case 2:
                return AS_SEQUENCE;
            default:
                throw new InvalidPacketException(buffer, "Unknown value: {}", value);
        }
    }

