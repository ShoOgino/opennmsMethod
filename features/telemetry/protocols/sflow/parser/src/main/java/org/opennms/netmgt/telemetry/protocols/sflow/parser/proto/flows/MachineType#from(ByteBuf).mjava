    public static MachineType from(final ByteBuf buffer) throws InvalidPacketException {
        final int value = (int) BufferUtils.uint32(buffer);
        switch (value) {
            case 0:
                return unknown;
            case 1:
                return other;
            case 2:
                return x86;
            case 3:
                return x86_64;
            case 4:
                return ia64;
            case 5:
                return sparc;
            case 6:
                return alpha;
            case 7:
                return powerpc;
            case 8:
                return m68k;
            case 9:
                return mips;
            case 10:
                return arm;
            case 11:
                return hppa;
            case 12:
                return s390;
            default:
                throw new InvalidPacketException(buffer, "Unknown value: {}", value);
        }
    }

