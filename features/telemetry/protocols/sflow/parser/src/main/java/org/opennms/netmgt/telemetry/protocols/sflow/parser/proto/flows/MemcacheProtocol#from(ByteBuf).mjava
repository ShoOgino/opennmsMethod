    public static MemcacheProtocol from(final ByteBuf buffer) throws InvalidPacketException {
        final int value = (int) BufferUtils.uint32(buffer);
        switch (value) {
            case 0:
                return OTHER;
            case 1:
                return ASCII;
            case 2:
                return BINARY;
            default:
                throw new InvalidPacketException(buffer, "Unknown value: {}", value);
        }
    }

