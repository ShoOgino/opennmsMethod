        private static Type from(final ByteBuf buffer) throws InvalidPacketException {
            final int type = uint8(buffer);
            switch (type) {
                case 1:
                    return OPEN;
                case 2:
                    return UPDATE;
                case 3:
                    return NOTIFICATION;
                case 4:
                    return KEEPALIVE;
                default:
                    BmpParser.RATE_LIMITED_LOG.debug("Unknown BGP Packet Type: {}", type);
                    return UNKNOWN;
            }
        }

