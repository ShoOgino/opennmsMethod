        public Template build() {
            Preconditions.checkNotNull(this.type);
            Preconditions.checkNotNull(this.fields);
            Preconditions.checkPositionIndex(this.scopeFieldsCount, this.fields.size());

            return new Template(
                    this.type,
                    this.fields,
                    this.scopeFieldsCount
            );
        }

