	/**
	 * <p>stop</p>
	 */
	public void stop() {
		
		for( Pipe pipe : m_loggingPorts.values() )
		{
			pipe.stop();
		}
		
		m_loggingPorts.clear();
		
		System.out.print( "Closing " + m_openPorts.size() + " open comm ports... ");
		
		for( SerialPort port : m_openPorts.values() )
		{
			removeListener( port );
			port.close();
		}
		
		m_openPorts.clear();
		
		System.out.println("done.");
		
	}

