    public String getHostsQuery(String regex, long limit, List<Filter> filters) {
        Objects.requireNonNull(filters);

        return render("aggregate_by_regex.ftl", ImmutableMap.builder()
                .put("filters", getFilterQueries(filters))
                .put("regex", regex)
                .put("limit", limit)
                .put("field", "hosts")
                .build());
    }

