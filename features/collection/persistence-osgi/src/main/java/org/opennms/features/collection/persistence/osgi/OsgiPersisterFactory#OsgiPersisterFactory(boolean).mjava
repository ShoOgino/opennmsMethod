    public OsgiPersisterFactory(boolean blocking) {
        if (blocking) {
            serviceLookup = new ServiceLookupBuilder(new ServiceRegistryLookup(DefaultServiceRegistry.INSTANCE))
                    .blocking()
                    .build();
        } else {
            serviceLookup = new ServiceLookupBuilder(new ServiceRegistryLookup(DefaultServiceRegistry.INSTANCE))
                    .build();
        }
    }

