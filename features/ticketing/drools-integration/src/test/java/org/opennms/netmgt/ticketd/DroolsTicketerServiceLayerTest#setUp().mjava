        m_alarm.setId(1);
        m_alarm.setLogMsg("Test Logmsg");
        m_alarm.setDescription("Test Description");
        m_alarm.setUei("uei.opennms.org/nodes/nodeDown");
        
        m_ticket = new Ticket();
        m_ticket.setId("4");
