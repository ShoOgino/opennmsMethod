    @Test
    public void verifyNeedsRefresh() throws InterruptedException {
        RefreshPolicy refreshPolicy = new TimeoutRefreshPolicy(5, TimeUnit.SECONDS);
        Assert.assertEquals(Boolean.TRUE, refreshPolicy.needsRefresh());
        Assert.assertEquals(Boolean.FALSE, refreshPolicy.needsRefresh());
        Thread.sleep(5000);
        Assert.assertEquals(Boolean.TRUE, refreshPolicy.needsRefresh());
    }

