    public static JsonElement getPath(JsonObject jo, String[] path) {
        JsonElement retval = null;
        if (jo != null) {
            JsonElement obj = jo;
            for (String component : path) {
                if (obj == null) break;
                obj = ((JsonObject) obj).get(component);
            }
            retval = obj;
        }
        return retval;
    }

