        @Override
        public void run() {
            final JmxConfigGeneratorUI ui = taskToRun.getUI();
            try {
                final Object result = taskToRun.execute();
                ui.access(() -> {
                    ui.hideProgressWindow();
                    taskToRun.onSuccess(result);
                });
            } catch (TaskRunException trex) {
                handleError(ui, trex);
            } catch (Exception ex) {
                handleError(ui, ex);
            } finally {
               ui.access(ui::hideProgressWindow);
            }
        }

