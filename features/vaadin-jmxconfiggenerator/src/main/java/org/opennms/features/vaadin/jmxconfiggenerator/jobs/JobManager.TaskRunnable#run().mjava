        @Override
        public void run() {
            try {
                final Object result = taskToRun.execute();

                UI.getCurrent().access(new Runnable() {
                    @Override
                    public void run() {
                        UIHelper.getCurrent(JmxConfigGeneratorUI.class).hideProgressWindow();
                        taskToRun.onSuccess(result);
                    }
                });
            } catch (TaskRunException trex) {
                handleError(trex);
            } catch (Exception ex) {
                handleError(ex);
            } finally {
               UI.getCurrent().access(new Runnable() {
                   @Override
                   public void run() {
                       UIHelper.getCurrent(JmxConfigGeneratorUI.class).hideProgressWindow();
                   }
               });
            }
        }

