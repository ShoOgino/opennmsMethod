  public void paintControl(PaintEvent e){

    Display display=Display.getDefault();
    if(display==null){
      return;
    }

    if(img==null){
      Rectangle bounds=getBounds();
      setSize(display, bounds.width, bounds.height);
    }

    synchronized(this){
      e.gc.drawImage(img, 0, 0);
    }
  }

