  public void widgetDisposed(DisposeEvent e){
    for(int i=0; i<colors.length; i++){
      ((Color)colors[i]).dispose();
    }
    if(img!=null){
      img.dispose();
      img=null;
    }
    if(graphics!=null){
      graphics.dispose();
      graphics=null;
    }

    if(font!=null){
      font.dispose();
      font=null;
    }

    if(backgroundImg!=null){
      backgroundImg.dispose();
      backgroundImg=null;
    }
  }

