      try{
        out.write((byte)0x0d);

        out.write((byte)0x1b);
        out.write((byte)'[');
        out.write((byte)'K');

        out.write((src+": "+percent+"% "+count+"/"+max).getBytes());
        out.flush();
      }
      catch(Exception e){
      }
    }

