  int getASCII(int len) throws java.io.IOException{
    //System.out.println("bufs="+bufs+", buflen="+buflen+", len="+len);
    if(buflen==0){
      fillBuf();
    }
    if(len>buflen)
      len=buflen;
    int foo=len;
    byte tmp;
    while(len>0){
      tmp=buf[bufs++];
      if(0x20<=tmp&&tmp<=0x7f){
        buflen--;
        len--;
        continue;
      }
      bufs--;
      break;
    }
    //System.out.println(" return "+(foo-len));
    return foo-len;
  }

