    public void removeVertex(Object vertexId) {
        VmwareVertex vertex = getVertex(vertexId, false);

        if (vertex == null) {
            return;
        }

        m_vertexContainer.removeItem(vertexId);

        for (VmwareEdge e : vertex.getEdges()) {
            m_edgeContainer.removeItem(e.getId());
        }
    }

