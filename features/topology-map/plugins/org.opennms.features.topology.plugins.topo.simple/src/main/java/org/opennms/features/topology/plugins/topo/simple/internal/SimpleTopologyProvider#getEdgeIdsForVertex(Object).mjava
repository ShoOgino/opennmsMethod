    @Override
    public Collection<String> getEdgeIdsForVertex(Object vertexId) {
        
        SimpleVertex vertex = getRequiredVertex(vertexId);
        
        List<String> edges = new ArrayList<String>(vertex.getEdges().size());
        
        for(SimpleEdge e : vertex.getEdges()) {
            edges.add(e.getId());
        }
        
        return edges;

    }

