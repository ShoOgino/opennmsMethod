	/**
	 * Very inefficient default behavior, override in subclasses.
	 */
	@Override
	public Object firstItemId() {
		List<T> items = m_dao.findMatching(m_criteria);
		doAdditionalSorts(items);
		Iterator<T> itr = items.iterator();
		if (itr.hasNext()) {
			return getId(itr.next());
		} else {
			return null;
		}
	}

