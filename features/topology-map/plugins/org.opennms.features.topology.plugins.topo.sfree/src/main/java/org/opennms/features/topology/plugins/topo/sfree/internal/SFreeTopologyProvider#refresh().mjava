    @Override
    public void refresh() {
        clearVertices();
        clearEdges();

        switch (type) {
            case ErdosRenis:
                createERRandomTopology(m_nodeCount, m_connectedness);
                break;
            case BarabasiAlbert:
                createBARandomTopology(m_nodeCount, m_connectedness);
                break;
            default:
                throw new IllegalStateException("Type not supported");
        }
    }

