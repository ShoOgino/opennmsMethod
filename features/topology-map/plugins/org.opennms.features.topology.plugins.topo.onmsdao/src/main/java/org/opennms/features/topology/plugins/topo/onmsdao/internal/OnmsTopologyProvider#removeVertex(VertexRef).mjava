    @Override
    public void removeVertex(VertexRef vertexId) {
        
        Vertex vertex = getVertex(vertexId, false);
        if (vertex == null) return;
        
        m_vertexContainer.remove(vertexId);
        
        for(Edge e : vertex.getEdges()) {
            m_edgeContainer.remove(e);
        }
                
        
    }

