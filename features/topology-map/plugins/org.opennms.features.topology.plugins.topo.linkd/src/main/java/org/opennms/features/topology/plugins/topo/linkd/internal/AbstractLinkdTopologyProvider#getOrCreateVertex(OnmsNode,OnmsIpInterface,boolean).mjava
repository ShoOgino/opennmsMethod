    protected final Vertex getOrCreateVertex(OnmsNode node,OnmsIpInterface primary, boolean add) {
        Vertex source = getVertex(getNamespace(), node.getNodeId());
        if (source == null) {
            source = createLinkdVertex(node,primary); 
            if (add) {
                addVertices(source);
            }
        }        
        return source;
    }

