	private void reset_hard() {
		// Attribute mask: 0x0XFB0000
		//	X:	Bit 0 - Underlined
		//		Bit 1 - Negative
		//		Bit 2 - Concealed
		//	F:	Foreground
		//	B:	Background
		attr = 0x00fe0000;
		// UTF-8 decoder
		utf8_units_count = 0;
		utf8_units_received = 0;
		utf8_char = 0;
		// Key filter
		vt100_keyfilter_escape = false;
		// Last char
		vt100_lastchar = 0;
		// Control sequences
		vt100_parse_len = 0;
		vt100_parse_state = State.None;
		vt100_parse_func = 0;
		vt100_parse_param = "";
		// Buffers
		vt100_out = "";
		// Invoke other resets
		reset_screen();
		reset_soft();
	}

