    @Override
    public void attach() {
        super.attach();

        int posX = (int)(getUI().getPage().getBrowserWindowWidth() - this.getWidth())/2;
        int posY = (int)(getUI().getPage().getBrowserWindowHeight() - this.getHeight())/2;
        setPositionX(posX);
        setPositionY(posY);
        if (showOptions) hostField.focus();
        else usernameField.focus();
    }

