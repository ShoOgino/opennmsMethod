        private double calculateBoundsY(double mapHeight, int offsetHeight,
                double y) {
            double boundaryY;
            if(mapHeight > offsetHeight) {
                boundaryY = Math.min(0, Math.max(offsetHeight - mapHeight, y));
            }else {
                boundaryY = Math.max(0, Math.min(offsetHeight - mapHeight, y));
            }
            return boundaryY;
        }

