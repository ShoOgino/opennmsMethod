	public void showContextMenu(Object target, int x, int y, String type) {
		Map<String, Object> map = new HashMap<String, Object>();
		map.put("target", target);
		map.put("x", x);
		map.put("y", y);
		map.put("type", type);

		m_client.updateVariable(getPaintableId(), "contextMenu", map, true);
	}

