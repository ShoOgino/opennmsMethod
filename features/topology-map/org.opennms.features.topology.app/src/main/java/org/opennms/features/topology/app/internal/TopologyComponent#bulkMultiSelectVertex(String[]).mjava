    /**
     * Select multiple vertices at a time
     * @param vertexIds
     */
    private void bulkMultiSelectVertex(String[] vertexIds) {
        for(String vertexId : vertexIds) {
            TopoVertex vertex = getGraph().getVertexByKey((String)vertexId);
            vertex.setSelected(true);
        }
        
        requestRepaint();
    }

