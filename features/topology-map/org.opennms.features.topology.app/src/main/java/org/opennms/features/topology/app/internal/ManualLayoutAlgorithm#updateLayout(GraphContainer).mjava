	public void updateLayout(GraphContainer graphContainer) {
	    Graph g = graphContainer.getGraph();
        
        Layout layout = g.getLayout();
        int i = 0;
        for(Vertex vertex : g.getDisplayVertices()) {
            int x = i * 200;
            int y = i * 200;
            
            layout.setLocation(vertex, x, y);
            i++;
        }
	}

