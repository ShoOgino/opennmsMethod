    public static D3Behavior create() {
        return new D3Behavior() {

            @Override
            public D3 run(D3 selection) {
                return selection.append("g").append("line").attr("class", "path").attr("opacity", 0).style("stroke-width", "5").style("cursor", "pointer")
                        .call(draw());
            }
        };
    }

