    private void doInit() {
        Graph<V,E> graph = getGraph();
        Dimension d = getSize();
        if(graph != null && d != null) {
            currentIteration = 0;
            temperature = d.getWidth() / 10;

            forceConstant =
                    Math
                            .sqrt(d.getHeight()
                                    * d.getWidth()
                                    / graph.getVertexCount());

            attraction_constant = attraction_multiplier * forceConstant;
            repulsion_constant = repulsion_multiplier * forceConstant;
        }
    }

