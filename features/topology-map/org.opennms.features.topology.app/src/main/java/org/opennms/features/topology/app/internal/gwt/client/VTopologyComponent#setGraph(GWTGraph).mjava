	private void setGraph(GWTGraph graph) {
		m_graph = graph;
		
		if(isPanToSelection()) {
		    repaintGraphNow();
		    centerSelection(m_graph.getVertices(m_semanticZoomLevel));
		} else if(isFitToView()) {
		    repaintGraphNow();
		    fitMapToView(m_graph.getVertices(m_semanticZoomLevel));
		}else {
		    repaintGraph();
		}
		
	}

