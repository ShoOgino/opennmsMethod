	@Override
	public boolean display(List<VertexRef> targets, OperationContext operationContext) {
		if (operationContext.getGraphContainer().getBaseTopology().groupingSupported()) {
			return targets != null && 
					targets.size() == 1 && 
					targets.get(0) != null 
					;
		} else {
			return false;
		}
	}

