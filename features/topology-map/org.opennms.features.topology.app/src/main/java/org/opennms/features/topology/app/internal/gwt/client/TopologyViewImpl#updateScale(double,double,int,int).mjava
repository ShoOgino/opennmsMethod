//        	    .transition().duration(30000)
//        	    .attr("transform", matrixTransform(ctm) )
//        	    .selectAll(".edge").transition().styleTween("stroke-width", edgeStrokeWidthTween(5 / newScale) );
        } else {
           m_isRefresh = true;
        }
    }

