    /**
     * Retrieves the {@link Status} from a {@link StatusWithIndices}.
     *
     * @param si
     * @return
     */
    protected static Optional<Status> getStatus(Optional<StatusWithIndices> si) {
        if (!si.isPresent()) {
            return Optional.empty();
        } else {
            return Optional.of(si.get().getStatus());
        }
    }

