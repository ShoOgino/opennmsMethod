    private static OnmsAlarm createAlarm(int nodeId, String ip, String service, OnmsSeverity severity) {
        OnmsAlarm alarm = createAlarm(
                EventConstants.NODE_LOST_SERVICE_EVENT_UEI,
                severity,
                String.format("%s::%s:%s:%s",
                        EventConstants.NODE_LOST_SERVICE_EVENT_UEI,
                        nodeId,
                        ip,
                        service));
        return alarm;
    }

