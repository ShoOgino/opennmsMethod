    private void initializeMap(final String divId) {
        logger.log(Level.INFO, "initializing map");

        createMap(divId);
        // createGoogleLayer();
        addTileLayer();
        addMarkerLayer();

        // overlay controls
        addSearchControl();
        addAlarmControl();
        addZoomControl();

        m_searchControl.focus();

        logger.log(Level.INFO, "finished initializing map");
    }

