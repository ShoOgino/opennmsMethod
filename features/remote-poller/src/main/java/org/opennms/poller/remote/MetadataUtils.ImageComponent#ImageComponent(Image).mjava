        public ImageComponent(final Image image) {
            m_image = image;
            Dimension size = new Dimension(image.getWidth(null), image.getHeight(null));
            setPreferredSize(size);
            setMinimumSize(size);
            setMaximumSize(size);
            setSize(size);
            setLayout(null);
            setBackground(new Color(0,0,0,0));
        }

