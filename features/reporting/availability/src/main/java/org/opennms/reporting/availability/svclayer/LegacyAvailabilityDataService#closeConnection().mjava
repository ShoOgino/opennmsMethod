    /**
     * Closes the database connection.
     */
    private void closeConnection() {
        if (m_availConn != null) {
            try {
                m_availConn.close();
                m_availConn = null;
            } catch (Throwable t) {
                LOG.warn("initialize: an exception occured while closing the JDBC connection", t);
            }
        }
    }

