    /**
     * Returns the number of services affected.
     *
     * @return a int.
     */
    public int getServiceAffectCount() {
        int count = 0;
        if (m_services != null && m_services.size() > 0) {
        	for (Service service : m_services) {
				if (service.getOutages().size() > 0) {
					count++;
				}
			}
        }
        return count;
    }

