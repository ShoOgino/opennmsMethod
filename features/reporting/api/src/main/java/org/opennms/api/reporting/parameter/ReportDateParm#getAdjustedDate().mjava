    private Date getAdjustedDate() {
        if (m_isAdjustedDate) {
            return m_date;
        }


        long millis = m_date.getTime();
        if (!m_isAdjustedDate) {
            if (m_hours != null) {
                millis += (m_hours * 60 * 60 * 1000);
            }
            if (m_minutes != null) {
                millis += (m_minutes * 60 * 1000);
            }
        }
        return new Date(millis);
    }

