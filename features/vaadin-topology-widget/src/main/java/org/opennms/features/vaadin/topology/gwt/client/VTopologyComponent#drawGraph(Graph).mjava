    private void drawGraph(Graph graph) {
		D3 lines = m_nodeGroup.selectAll("line")
					.data(graph.getEdges())
				.enter().append("line")
					.attr("x1", getX1())
					.attr("x2", getX2())
					.attr("y1", getY1())
					.attr("y2", getY2())
					.style("stroke", "#ccc");
				
    	
    	D3 circles = m_nodeGroup.selectAll(".little")
						.data(graph.getVertices())
						.enter()
						.append("circle")
						.attr("class", ".little")
						.attr("cx", getX())
						.attr("cy", getY())
						.attr("r", 9);
		
			
		
						
		
	}

