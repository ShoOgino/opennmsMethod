	public List<Edge> getEdgesForVertex(Vertex vertex){
	    List<Edge> edgeList = new ArrayList<Edge>();
	    Iterator<Edge> it = m_edges.iterator();
        while(it.hasNext()) {
            Edge edge = it.next();
            if(edge.getSource() == vertex || edge.getTarget() == vertex) {
                edgeList.add(edge);
            }
        }
	    return edgeList;
	}

