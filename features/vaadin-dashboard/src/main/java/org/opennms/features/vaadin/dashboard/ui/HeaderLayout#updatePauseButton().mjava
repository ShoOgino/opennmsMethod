    private void updatePauseButton() {
        if (wallboardView.isPausable()) {
            pauseButton.setEnabled(true);

            if (wallboardView.isPaused()) {
                pauseButton.setCaption("Resume");
            } else {
                pauseButton.setCaption("Pause");
            }
        } else {
            pauseButton.setEnabled(false);
            pauseButton.setCaption("Pause");
        }
    }

