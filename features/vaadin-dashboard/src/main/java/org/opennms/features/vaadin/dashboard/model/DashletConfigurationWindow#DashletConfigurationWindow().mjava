    /**
     * Standard constructor for this class.
     */
    public DashletConfigurationWindow() {
        /**
         * Setting the title
         */
        super("Configuration");

        /**
         * Setting the modal and size properties
         */
        setModal(true);
        setClosable(false);
        setResizable(false);
        setWidth(60, Unit.PERCENTAGE);
        setHeight(80, Unit.PERCENTAGE);
    }

