    public void updateAll() {
        for (int y = 0; y < getRows(); y++) {
            for (int x = 0; x < getColumns(); x++) {
                Panel panel = (Panel) getComponent(x, y);
                if (panel != null) {
                    Component component = panel.getContent();

                    if (component != null) {
                        m_displayDashlets.get(component).refresh();
                    }
                }
            }
        }
    }

