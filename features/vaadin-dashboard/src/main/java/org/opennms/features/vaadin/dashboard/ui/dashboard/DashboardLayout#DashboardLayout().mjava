    /**
     * Default constructor.
     */
    public DashboardLayout() {
        setSizeFull();

        for (int i = 0; i < m_columns.length; i++) {
            m_columns[i] = new StackPortalLayout();
            m_columns[i].setSizeFull();
            m_columns[i].setMargin(true);
            m_columns[i].setSpacing(true);
            appendPortal(m_columns[i]);
        }
    }

