    @Override
    public BroadcastDomain getBroadcastDomain(int nodeId) {
        synchronized (m_domains) {
            for (BroadcastDomain domain : m_domains) {
                synchronized (domain) {
                    Bridge bridge = domain.getBridge(nodeId);
                    if (bridge != null) {
                        return domain;
                    }
                }
            }
        }
        return null;
    }

