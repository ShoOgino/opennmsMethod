    public String next() {
        String s = String.format("%1$" + 12 + "s", Integer.toHexString(last)); // example: "           1"
        s = s.replace(' ', '0'); // example: "000000000001"
        s = s.substring(0, 2)
                + ':' + s.substring(2, 4)
                + ':' + s.substring(4, 6)
                + ':' + s.substring(6, 8)
                + ':' + s.substring(8, 10)
                + ':' + s.substring(10, 12);
        last++;
        return s;
    }

