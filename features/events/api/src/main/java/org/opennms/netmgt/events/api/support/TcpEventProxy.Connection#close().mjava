        @Override
        public void close() {
            if (m_sock != null) {
                try {
                    LOG.debug("Closing socket {}", m_sock);
                    m_sock.close();
                } catch (IOException e) {
                    LOG.warn("Error closing socket {}", m_sock, e);
                }
            }

            m_sock = null;

            if (m_rdrThread.isAlive()) {
                m_rdrThread.interrupt();
            }
        }

