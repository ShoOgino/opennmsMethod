    @Test
    public void test() {
        Operaction operaction = new Operaction();
        operaction.setContent("content");
        operaction.setState("on");
        operaction.setMenutext("text");

        // Mutable to Immutable
        IOperAction immutableOperAction = ImmutableMapper.fromMutableOperAction(operaction);

        // Immutable to Mutable
        Operaction convertedOperaction = Operaction.copyFrom(immutableOperAction);

        String expectedXml = XmlTest.marshalToXmlWithJaxb(operaction);
        String convertedXml = XmlTest.marshalToXmlWithJaxb(convertedOperaction);
        XmlTest.assertXmlEquals(expectedXml, convertedXml);
    }

