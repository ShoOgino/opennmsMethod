        @Override
        public void run() {
            final RateLimiter rateLimiter = RateLimiter.create(eventsPerSecondPerThread);
            while (true) {
                eventForwarder.sendNow(getNextEvent());
                eventsGenerated.mark();
                rateLimiter.acquire();
                if (Thread.interrupted()) {
                    break;
                }
            }
        }

