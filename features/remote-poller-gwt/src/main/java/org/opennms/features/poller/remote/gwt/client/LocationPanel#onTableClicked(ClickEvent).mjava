	@UiHandler("locations")
	void onTableClicked(final ClickEvent event) {
		final Cell cell = locations.getCellForEvent(event);
		
	    if (cell != null) {
	    	final int row = cell.getRowIndex();
	    	final String locationName = locations.getText(row, 0);
	    	styleRow(row);
	    	selectLocation(locationName);
	    }
	}

