    public void updateList(final ArrayList<ApplicationInfo> applications) {
        setApplications(applications);
        if (m_selected != null) {
            m_eventBus.fireEvent(new ApplicationSelectedEvent(m_selected.getApplicationName()));
        }
        refresh();
    }

