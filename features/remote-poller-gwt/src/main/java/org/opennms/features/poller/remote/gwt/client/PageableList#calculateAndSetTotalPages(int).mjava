    protected void calculateAndSetTotalPages(final int size) {
        if(size > getTotalListItemsPerPage()) {
            int totalPages = (int) Math.ceil(size / getTotalListItemsPerPage());
            if(totalPages == 0) {
                totalPages = 1;
            }
            setTotalPages( totalPages );
            
        }else {
            setTotalPages(0);
        }
    }

