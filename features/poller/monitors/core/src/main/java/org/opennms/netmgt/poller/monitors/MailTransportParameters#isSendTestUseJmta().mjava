    /**
     * <p>isSendTestUseJmta</p>
     *
     * @return a boolean.
     */
    public boolean isSendTestUseJmta() {
        if (getSendTest() == null) {
            throw new IllegalStateException("Request for sendmail parameters invalid due to no sendmail specification in config");
        }
        return getSendTest().getUseJmta();
    }

