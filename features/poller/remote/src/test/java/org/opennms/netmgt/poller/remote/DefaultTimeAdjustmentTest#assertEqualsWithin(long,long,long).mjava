    private void assertEqualsWithin(final long a, final long b, final long distance) {
        boolean fail = false;
        if (a + distance < b) {
            fail = true;
        } else if (b + distance < a) {
            fail = true;
        }
        if (fail) {
            fail(String.format("%d and %d were not within %d of each other", a, b, distance));
        }
    }

