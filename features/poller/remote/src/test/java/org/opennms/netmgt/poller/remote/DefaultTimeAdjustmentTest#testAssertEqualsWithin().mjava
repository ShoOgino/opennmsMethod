    @Test
    public void testAssertEqualsWithin() {
        assertEqualsWithin(5, 7, 2);
        assertEqualsWithin(7, 5, 2);
        
        try {
            assertEqualsWithin(5, 8, 2);
        } catch (AssertionError e) {
            assertTrue(e != null);
        }
        
        try {
            assertEqualsWithin(8, 5, 2);
        } catch (AssertionError e) {
            assertTrue(e != null);
        }
    }

