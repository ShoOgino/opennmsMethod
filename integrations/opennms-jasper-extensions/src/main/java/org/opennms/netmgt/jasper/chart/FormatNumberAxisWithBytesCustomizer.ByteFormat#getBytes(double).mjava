        public static String getBytes(double bytes) {
            Format largestFormat = Format.B;
            long denum = 0;
            for (Format fmt : Format.values()) {
                largestFormat = fmt;

                if (denum == 0) {
                    denum = 1;
                } else {
                    denum *= 1024;
                }

                if (((long)(bytes / (denum * 1024))) == 0) {
                    break;
                }
            }
            return df.format(bytes / denum) + largestFormat;
        }

