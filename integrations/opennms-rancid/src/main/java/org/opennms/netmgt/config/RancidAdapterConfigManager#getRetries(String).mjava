    /** {@inheritDoc} */
    public int getRetries(final String ipaddr) {
        getReadLock().lock();
        try {
            if (hasPolicyManage(ipaddr) && getPolicyManage(ipaddr).hasRetries()) {
                return getPolicyManageWithoutTesting(ipaddr).getRetries();
            }
            return getConfiguration().getRetries();
        } finally {
            getReadLock().unlock();
        }
    }

