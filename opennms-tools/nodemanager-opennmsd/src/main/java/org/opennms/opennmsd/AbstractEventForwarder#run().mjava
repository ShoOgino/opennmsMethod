    public void run() {
        
        try {

            while(true) {
                NNMEvent event = (NNMEvent)m_queue.take();
                
                List<NNMEvent> events = new LinkedList<NNMEvent>();
                events.add(event);
            
                m_queue.drainTo(events);
            
                forwardEvents(events);
            
            }
        
        } catch (InterruptedException e) {
            // thread interrupted so complete it
        }
        
    }

