    /**
     * <p>Get RRD DB reference</p>
     *
     * TODO: Why do we need this here?
     * @param path
     * @return
     * @throws IOException
     * @throws RrdException
     */
    private RrdDb getRrdDbReference(String path) throws IOException, RrdException {
        if (rrdDbPoolUsed) {
            return RrdDbPool.getInstance().requestRrdDb(path);
        } else {
            return new RrdDb(path);
        }
    }

