    public File tempDir(File parent, String name) throws IOException {
        String path;
        if (parent != null) {
            path = parent.getAbsolutePath() + File.separator + name;
        } else {
            path = name;
        }
        
        File f = new File(path);
        assertTrue("mkdir: " + f.getAbsolutePath(), f.mkdir());
        m_deleteMe.add(f);
        return f;
    }

