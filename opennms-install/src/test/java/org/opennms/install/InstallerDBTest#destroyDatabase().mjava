    public void destroyDatabase() throws SQLException {
        if (m_leaveDatabase) {
            System.err.println("Not dropping database '" + m_testDatabase
                    + "' for test '" + getName() + "'");
        } else {
            Statement st = m_installer.m_dbconnection.createStatement();
            st.execute("DROP DATABASE " + m_testDatabase);
            st.close();
        }
    }

