    @Override
    protected void tearDown() throws Exception {
        if (areTestsEnabled()) {
            try {
                destroyTestDatabase();
            } catch (Throwable t) {
                if (m_throwable != null) {
                    throw new TestFailureAndTearDownErrorException(m_throwable, t);
                } else {
                    if (t instanceof Exception) {
                        throw (Exception) t;
                    } else {
                        throw new UndeclaredThrowableException(t);
                    }
                }
            }
        }

        super.tearDown();
    }

