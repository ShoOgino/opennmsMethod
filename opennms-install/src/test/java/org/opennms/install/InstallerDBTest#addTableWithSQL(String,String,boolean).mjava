    private void addTableWithSQL(String table, String sql, boolean addTriggers)
    throws SQLException {
        executeSQL("CREATE TABLE " + table + " ( " + sql + " )");
        
        if (!addTriggers) {
            return;
        }
        
        m_installer.addIndexesForTable(table);
        m_installer.addTriggersForTable(table);
    }

