    public void testTriggersAfterUpdate() throws Exception {
        if (!isDBTestEnabled()) {
            return;
        }

        m_installer.createSequences();
        m_installer.updatePlPgsql();
        m_installer.addStoredProcedures();

        m_installer.createTables();

        verifyTriggers(false);

        m_installer.createTables();

        verifyTriggers(false);
    }

