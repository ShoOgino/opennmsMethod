    public static String join(String sep, Object[] array) {
        StringBuffer sb = new StringBuffer();

        if (array.length > 0) {
            sb.append(array[0].toString());
        }

        for (int i = 1; i < array.length; i++) {
            if (array[i] == null) {
                sb.append(sep + "(null)");
            } else {
                sb.append(sep + array[i].toString());
            }
        }

        return sb.toString();
    }

