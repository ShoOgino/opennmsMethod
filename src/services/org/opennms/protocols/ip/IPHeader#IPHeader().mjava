	/**
	 * Constructs a basic IP header, but the header
	 * <EM>is not</EM> valid until a large part of
	 * the information is configured. 
	 */
	public IPHeader()
	{
		m_hdrlen	= 5;
		m_version	= IP_VERSION;
		m_tos		= 0;
		m_length	= 20;
		m_identity	= 0;
		m_flags		= 0;
		m_fragOffset	= 0;
		m_ttl		= 30;
		m_protocol	= 0;
		m_checksum	= 0;
		m_srcAddr	= 0;
		m_dstAddr	= 0;
		m_options	= new byte[0];
	}

