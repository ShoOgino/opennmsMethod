    /**
     * Returns the 32-bit IPv4 address.
     * 
     * @return 32-bit IPv4 address
     * 
     */
    public int getAddress() {
        int addr = byteToInt(m_addr[0]) << 24;
        addr |= byteToInt(m_addr[1]) << 16;
        addr |= byteToInt(m_addr[2]) << 8;
        addr |= byteToInt(m_addr[3]);

        return addr;
    }

