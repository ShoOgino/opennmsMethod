    /**
     * Get the groups
     */
    public Map getGroups() throws IOException, MarshalException, ValidationException {
    
        updateFromFile();
    
        Map newMap = new HashMap();
    
        Iterator i = m_groups.keySet().iterator();
    
        while (i.hasNext()) {
            String key = (String) i.next();
            newMap.put(key, (Group) m_groups.get(key));
        }
    
        return newMap;
    
    }

