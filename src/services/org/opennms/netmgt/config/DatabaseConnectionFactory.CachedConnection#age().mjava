		/**
		 * Returns the current age of the connection since it was
		 * last used in milliseconds. The time is based upon the
		 * last time the connection was returned to the database
		 * pool. If the connection is kept in use then the value
		 * returned by this method is of no value.
		 *
		 * @return The time since the connection was last closed.
		 */
		synchronized long age()
		{
			return System.currentTimeMillis() - m_lastUse;
		}

