	/**
	*/
	public synchronized void saveUsers(Collection usersList)
		throws Exception
	{
		//clear out the interanal structure and reload it
		m_users.clear();
		
		Iterator i = usersList.iterator();
		while(i.hasNext())
		{
			User curUser = (User)i.next();
			m_users.put(curUser.getUserId(), curUser);
		}
		
	}

