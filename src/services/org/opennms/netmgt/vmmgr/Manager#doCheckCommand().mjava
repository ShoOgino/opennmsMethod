    private static void doCheckCommand() {
        Category log = ThreadCategory.getInstance(Manager.class);

        try {
            DatabaseChecker checker = new DatabaseChecker();
            checker.check();
        } catch (Throwable t) {
            log.error("error invoking check command", t);
            System.err.println(t);
            System.exit(1);
        }
        System.exit(0);
    }

