	/** 
	 * Responsible for pausing the collection daemon.
	 */
	public synchronized void pause()
	{
		if(m_status != RUNNING)
			return;

		m_status = PAUSE_PENDING;
		m_scheduler.pause();
		m_status = PAUSED;

		Category log = ThreadCategory.getInstance();
		if (log.isDebugEnabled())
			log.debug("pause: Collectd paused");
	}

