    /**
     * Responsible for stopping the thresholding daemon.
     */
    public synchronized void stop() {
        setStatus(STOP_PENDING);
        m_scheduler.stop();
        m_receiver.close();

        m_scheduler = null;
        setStatus(STOPPED);
        Category log = ThreadCategory.getInstance(getClass());
        if (log.isDebugEnabled())
            log.debug("stop: Threshd stopped");
    }

