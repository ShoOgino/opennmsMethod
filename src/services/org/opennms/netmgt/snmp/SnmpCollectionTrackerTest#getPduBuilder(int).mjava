    private TestPduBuilder getPduBuilder(int maxVarsPerPdu) {
        switch (m_version) {
        case V1:
            return new GetNextBuilder(maxVarsPerPdu);
        case V2:
            return new GetBulkBuilder(maxVarsPerPdu);
        default:
            throw new IllegalStateException("Don't understand version "+m_version);
        }
    }

