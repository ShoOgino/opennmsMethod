    /**
     * Retrieve nodeLabel from the node table of the database given a particular
     * nodeId.
     * 
     * @param nodeId
     *            Node identifier
     * 
     * @return nodeLabel Retreived nodeLabel
     * 
     * @throws SQLException
     *             if database error encountered
     */
    private static String getNodeLabel(long nodeId) throws SQLException {

        String nodeLabel = null;
        java.sql.Connection dbConn = null;
        Statement stmt = null;
        try {
            // Get datbase connection from the factory
            dbConn = m_dbConn.getConnection();

            // Issue query and extract nodeLabel from result set
            stmt = dbConn.createStatement();
            ResultSet rs = stmt.executeQuery("SELECT nodelabel FROM node WHERE nodeid=" + String.valueOf(nodeId));
            if (rs.next()) {
                nodeLabel = (String) rs.getString("nodelabel");
            }
        } finally {
            // Close the statement
            if (stmt != null) {
                try {
                    stmt.close();
                } catch (Exception e) {
                    // do nothing
                }
            }

            // Close the database connection
            if (dbConn != null) {
                try {
                    dbConn.close();
                } catch (Throwable t) {
                    // do nothing
                }
            }
        }

        return nodeLabel;
    }

