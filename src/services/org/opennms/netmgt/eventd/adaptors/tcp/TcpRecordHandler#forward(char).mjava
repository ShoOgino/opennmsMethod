    /**
     * forwards the characters to the attached pipe.
     */
    private void forward(char ch) throws IOException {
        try {
            if (m_out != null)
                m_out.write((int) ch);
        } catch (IOException e) {
            Category log = ThreadCategory.getInstance(getClass());
            if (log.isDebugEnabled())
                log.debug("An I/O error occured", e);
            throw e;
        }
    }

