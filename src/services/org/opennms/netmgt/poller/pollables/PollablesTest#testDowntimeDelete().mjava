    public void testDowntimeDelete() {
        pDot3Http.getSchedule().schedule();
        
        m_scheduler.next();
        
        assertTime(0);
        assertNotDeleted(pDot3Http);
        
        m_scheduler.next();
        
        assertTime(2000);
        assertNotDeleted(pDot3Http);
        
        anticipateDown(mDot3Http);
        
        mDot3Http.bringDown();
        
        m_scheduler.next();
        
        assertTime(4000);
        assertNotDeleted(pDot3Http);
        
        verifyAnticipated();
        
        m_scheduler.next();
        
        assertTime(4500);
        assertNotDeleted(pDot3Http);
        
        m_scheduler.next();
        
        assertTime(5000);
        assertDeleted(pDot3Http);
        
        
    }

