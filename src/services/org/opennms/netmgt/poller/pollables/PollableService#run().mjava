    /* (non-Javadoc)
     * @see java.lang.Runnable#run()
     */
    public void run() {
        if (getContext().isNodeProcessingEnabled()) {
            Runnable r = new Runnable() {
                public void run() {
                    doPoll();
                    getNode().processStatusChange(new Date());
                }
            };
            withTreeLock(r);
        }
        else {
            doPoll();
            processStatusChange(new Date());
        }

    }

