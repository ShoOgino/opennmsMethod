    /**
     * @return
     */
    public boolean isReady() {
        long when = getLastInterval();
        boolean ready = false;
    
        if (when < 1) {
            ready = true;
        } else {
            ready = ((when - (System.currentTimeMillis() - getLastScheduledPoll())) < 1);
        }
    
        return ready;
    }

