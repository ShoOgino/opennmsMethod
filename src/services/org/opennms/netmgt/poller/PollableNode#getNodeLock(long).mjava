    public boolean getNodeLock(long timeout) throws InterruptedException {
        boolean ownLock = false;

        synchronized (m_lock) {
            // Is the node currently locked?
            if (!m_isLocked) {
                // Now it is...
                m_isLocked = true;
                ownLock = true;
            } else {
                // Someone else has the lock, wait
                // for the specified timeout...
                m_lock.wait(timeout);

                // Was the lock released?
                if (!m_isLocked) {
                    // Yep...
                    m_isLocked = true;
                    ownLock = true;
                }
            }
        }

        return ownLock;
    }

