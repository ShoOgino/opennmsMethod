    /**
     * Pauses all the threads
     */
    public void pause() {
        if (m_status != RUNNING)
            return;

        m_status = PAUSE_PENDING;

        Category log = ThreadCategory.getInstance(getClass());

        m_status = PAUSED;

        if (log.isDebugEnabled())
            log.debug("Finished pausing all threads");
    }

