    /**
     * @param dbConn
     * @param writer
     * @return
     * @throws SQLException
     */
    public long getNextOutageId(Connection dbConn) throws SQLException {
        long outageID = -1;
    
        PreparedStatement getNextOutageIdStmt = dbConn.prepareStatement(m_sqlToGenerateOutageIds);
    
        // Execute the statement to get the next outage id from the
        // sequence
        //
        ResultSet seqRS = getNextOutageIdStmt.executeQuery();
        if (seqRS.next()) {
            outageID = seqRS.getLong(1);
        }
        seqRS.close();
        return outageID;
    }

