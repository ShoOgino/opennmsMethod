	/**
	 * Creates a new discovery ping packet that can
	 * be sent to a remote protocol stack. The ICMP
	 * type is set to an Echo Request. The next sequence
	 * in the ICMPHeader base class is set and the sent
	 * time is set to the current time.
	 *
	 * @param tid	The thread id for the packet.
	 *
	 * @see java.lang.System#currentTimeMillis
	 */
	public Packet(long tid)
	{
		super(ICMPHeader.TYPE_ECHO_REQUEST, (byte)0);
		setNextSequenceId();

		m_rtt = 0;
		m_sent = 0;
		m_recv = 0;
		m_tid  = tid;

		m_pad  = new byte[PAD_SIZE];
		for(int x = 0; x < NAMED_PAD.length && x < PAD_SIZE; x++)
			m_pad[x] = NAMED_PAD[x];
		for(int x = NAMED_PAD.length; x < PAD_SIZE; x++)
			m_pad[x] = (byte)x;

	}

