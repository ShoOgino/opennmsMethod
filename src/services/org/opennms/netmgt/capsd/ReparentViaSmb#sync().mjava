	/**
	 * Performs reparenting if necessary and generates appropriate
	 * events to inform other OpenNMS processes of any database changes..
	 *
	 * @throws SQLException if error occurs updating the database
	 */
	public void sync()
		throws SQLException
	{
		// Build node lists
		buildNodeLists();
		
		// Reparent interfaces if necessary
		if (m_reparentNodeMap != null && !m_reparentNodeMap.isEmpty())
		{
			reparentInterfaces();
	
			// Generate 'interfaceReparented' events if necessary
			if (m_reparentedIfMap != null && !m_reparentedIfMap.isEmpty())
				generateEvents();
		}
	}

