    /**
     * Stop the Capsd threads.
     */
    public void stop() {
        setStatus(STOP_PENDING);

        // Stop the broadcast event receiver
        //
        m_receiver.close();

        // Stop the Suspect Event Processor thread pool
        //
        m_suspectRunner.stop();

        // Stop the Rescan Processor thread pool
        //
        m_rescanRunner.stop();

        setStatus(STOPPED);
    }

