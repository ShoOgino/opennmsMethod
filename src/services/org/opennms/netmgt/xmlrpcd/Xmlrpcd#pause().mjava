    /**
     * Pauses Xmlrpcd
     */
    public void pause() {
        if (m_status != RUNNING)
            return;

        m_status = PAUSE_PENDING;

        Category log = ThreadCategory.getInstance(getClass());

        if (log.isDebugEnabled())
            log.debug("Calling pause on processor");

        m_processor.pause();

        if (log.isDebugEnabled())
            log.debug("Processor paused");

        m_status = PAUSED;

        if (log.isDebugEnabled())
            log.debug("Xmlrpcd paused");
    }

