    /**
     * Resumes Xmlrpcd
     */
    public void resume() {
        if (!isPaused())
            return;

        setStatus(RESUME_PENDING);

        Category log = ThreadCategory.getInstance(getClass());

        if (log.isDebugEnabled())
            log.debug("Calling resume on processor");

        m_processor.resume();

        if (log.isDebugEnabled())
            log.debug("Processor resumed");

        setStatus(RUNNING);

        if (log.isDebugEnabled())
            log.debug("Xmlrpcd resumed");
    }

