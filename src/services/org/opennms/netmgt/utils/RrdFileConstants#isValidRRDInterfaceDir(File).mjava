	public static final boolean isValidRRDInterfaceDir(File file) {
	    if(!file.isDirectory()) {
		return false;              
	    }
				
	    File[] intfRRDs = file.listFiles(RRD_FILENAME_FILTER);
		
	    if(intfRRDs != null && intfRRDs.length > 0) {
		return true;
	    }
		
	    return false;
	}

