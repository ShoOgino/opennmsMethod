	/**
	 * Fixes a PDU in error. If the error index and error
	 * status is non-zero then the variable in error is
	 * removed from the PDU. Once the variable is removed
	 * the error index and error status are reset to zero.
	 *
	 */
	public void fix()
	{
		if(super.m_errStatus != 0 && super.m_errIndex != 0)
		{
			removeVarBindAt(super.m_errIndex - 1);
			super.m_errStatus = 0;
			super.m_errIndex  = 0;
		}
	}

