	/**
	 * Appends the specified identifiers to the
	 * current object.
	 *
	 * @param ids The array of identifiers to append
	 *
	 */
	public void append(int[] ids)
	{
		if(ids != null && ids.length != 0)
		{
			int[] tmp = new int[m_data.length + ids.length];
			
			System.arraycopy(m_data,
				         0,
				         tmp,
				         0,
				         m_data.length);

			System.arraycopy(ids,
				         0,
				         tmp,
				         m_data.length,
				         ids.length);
			
			m_data = tmp;
		}
	}

