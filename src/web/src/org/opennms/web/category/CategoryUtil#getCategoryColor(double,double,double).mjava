    /**
     * Determine the color to use for a given value and thresholds.
     */    
    public static String getCategoryColor( double normal, double warning, double value ) {
        String color = RED;
        
        if( value >= normal ) {
           color = GREEN;
        } 
        else if( value >= warning ) {
            color = YELLOW;
        }

        return( color );
    }    

