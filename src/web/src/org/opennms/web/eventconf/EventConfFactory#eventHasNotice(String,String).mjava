	/**
	*/
	public boolean eventHasNotice(String uei, String notice)
	{
		if (m_lastModified != m_eventConfFile.lastModified())
		{
			try
			{
				reloadXML();
			}
			catch (Exception e)
			{
				return false;
			}
		}
		
		Event event = getEvent(uei);
		
		int index = event.getNoticeIndex(notice);
		
		if (index != -1)
			return true;
		
		return false;
	}

