    /**
     * This method is used for formatting the date attributes in a proper format.
     */
    private String appendZero(String values)
    {
            int len = values.length();
            if(values != null)
            {
                    if(len >= 0 && len < 2)
                    {
                            while(2 - len > 0)
                            {
                                    values = "0" + values;
                                    len++;
                            }   
                    }
                    else
                            if(len > 2)
                                    m_logger.debug("Incorrect attributes for time");
            }
            return values;
    }

