    /**
     * This method determines the log status of an event associated with a notification
     * @param eventId, the unique id of the event from the notice
     * @return boolean, true if the event is display, false if log only
     */
     public static boolean canDisplayEvent(int eventId)
     {
             boolean display = false;
             
             Connection connection = null;
             try
             {
                     connection = Vault.getDbConnection();
                     PreparedStatement statement = connection.prepareStatement("SELECT eventDisplay FROM events WHERE eventid=?");
                     
                     statement.setInt(1, eventId);
                     
                     ResultSet results = statement.executeQuery();
                     
                     results.next();
                     String status = results.getString(1);
                     
                     if (status.equals("Y"))
                     {
                             display = true;
                     }
                     
                     statement.close();
                     results.close();
             }
             catch(SQLException e)
             {
                     ThreadCategory.getInstance(NoticeFactory.class.getName()).error("Error getting event display status: " + e.getMessage(), e);
             }
             finally
             {
                     if(connection != null)
                     {
                             try { Vault.releaseDbConnection( connection ); } catch(SQLException e) { }
                     }
             }
             
             return display;
        }

