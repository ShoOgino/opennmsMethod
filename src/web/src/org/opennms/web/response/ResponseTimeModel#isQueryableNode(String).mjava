    public boolean isQueryableNode(String nodeId) 
        throws SQLException
	{
        	if(nodeId == null) {
    	        	throw new IllegalArgumentException("Cannot take null parameters.");
       		}
        	boolean isQueryable = false;        
		ArrayList intfList = getQueryableInterfacesForNode(nodeId);
		if (intfList != null)
		{
			isQueryable = true;
		}
       		 return isQueryable;
    	}

