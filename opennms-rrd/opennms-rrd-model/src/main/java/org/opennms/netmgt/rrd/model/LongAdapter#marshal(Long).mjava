    /* (non-Javadoc)
     * @see javax.xml.bind.annotation.adapters.XmlAdapter#marshal(java.lang.Object)
     */
    @Override
    public String marshal(Long value) throws Exception {
        if (value == null) {
            return null;
        }
        if (value == Long.MIN_VALUE) {
            return "-inf";
        }
        if (value == Long.MAX_VALUE) {
            return "inf";
        }
        return value.toString();
    }

