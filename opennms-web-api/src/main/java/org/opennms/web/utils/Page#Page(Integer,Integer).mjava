    public Page(Integer offset, Integer limit) {
        if (offset != null && offset.intValue() < 0) {
            throw new IllegalArgumentException("Offset must be > 0");
        }
        if (limit != null && limit <= 0) {
            throw new IllegalArgumentException("limit must be > 0");
        }
        this.offset = offset;
        this.limit = limit;
    }

