    /** {@inheritDoc} */
    @Override
    public void setAsText(final String text) throws IllegalArgumentException {
        Date date;
        try {
            final long epoch = Long.parseLong(text);
            date=new Date(epoch);
        } catch (final NumberFormatException e) {
            date = new Date(m_formatter.parseMillis(text));
        }
        super.setValue(date);
    }

