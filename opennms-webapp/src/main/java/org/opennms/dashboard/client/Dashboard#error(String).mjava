    /**
     * <p>error</p>
     *
     * @param err a {@link java.lang.String} object.
     */
    public void error(String err) {
        m_modalContent.clear();

        HTMLPanel html = new HTMLPanel(err);
        html.setStyleName("Message");
        m_modalContent.add(html);

        m_modal.show();
        
    }

