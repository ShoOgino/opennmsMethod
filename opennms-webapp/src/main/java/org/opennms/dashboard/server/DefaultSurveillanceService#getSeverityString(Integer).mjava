    private String getSeverityString(Integer severity) {
        switch(severity) {
        case 1: return "Indeterminate";
        case 2: return "Cleared";
        case 3: return "Normal";
        case 4: return "Warning";
        case 5: return "Minor";
        case 6: return "Major";
        case 7: return "Critical";
        default: return "Unknown";
        }
    }

