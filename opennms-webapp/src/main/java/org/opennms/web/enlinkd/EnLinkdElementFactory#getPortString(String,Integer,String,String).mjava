    private String getPortString(String ifname, Integer ifindex, String addrtype,String addr) {
        StringBuffer sb = new StringBuffer("");
        if (ifname != null) {
            sb.append(ifname);
        }
        if (ifindex != null) {
            sb.append("(ifindex:");
            sb.append(ifindex);
            sb.append(")");
        }
        if (addrtype != null) {
            sb.append(addrtype);
            sb.append(":");
            sb.append(addr);
        }
       return sb.toString();
    }

