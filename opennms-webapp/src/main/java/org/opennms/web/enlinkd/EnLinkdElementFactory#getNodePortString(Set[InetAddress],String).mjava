    private String getNodePortString(Set<InetAddress> ips, String physaddr) {
        String port = "";
        if (ips.size() > 1)
            port += "multiple ip addresses";
        if (ips.size() == 1)
            port += str(ips.iterator().next());
        if (physaddr != null)
            port += "(" + physaddr + ")";
        return port;
    }

