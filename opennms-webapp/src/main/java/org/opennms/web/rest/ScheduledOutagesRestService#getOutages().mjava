    @GET
    @Produces({MediaType.APPLICATION_XML, MediaType.APPLICATION_JSON})
    public Outages getOutages() {
        getReadLock().lock();
        try {
            Outages outages = new Outages();
            outages.setOutage(m_configFactory.getOutages());
            return outages;
        } finally {
            getReadLock().unlock();
        }
    }

