        void addOrReplaceInterface(String foreignId, RequisitionInterface iface) {
            Requisition req = getActiveRequisition(true);
            if (req != null) {
                final RequisitionNode node = req.getNode(foreignId);
                if (node != null) {
                    node.putInterface(iface);
                    save(req);
                }
            }
        }

