    private OnmsNode findNode(String nodeIdString) {
        int nodeId;
        
        try {
            nodeId = WebSecurityUtils.safeParseInt(nodeIdString);
        } catch (NumberFormatException e) {
            throw new IllegalArgumentException("parameter 'node' "
                                               + "with value '"
                                               + nodeIdString
                                               + "' could not be parsed "
                                               + "as an integer");
        }
        return m_nodeDao.get(nodeId);
    }

