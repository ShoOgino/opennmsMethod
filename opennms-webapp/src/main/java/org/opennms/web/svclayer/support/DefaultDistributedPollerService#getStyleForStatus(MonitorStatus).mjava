    private String getStyleForStatus(MonitorStatus status) {
        switch (status) {
        case REGISTERED:
            return "Warning";
                
        case STARTED:
            return "Normal";
            
        case STOPPED:
            return "Minor";
                
        case DISCONNECTED:
            return "Indeterminate";
                
        default:
            return "Indeterminate";
        }
    }

