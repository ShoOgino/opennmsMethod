    private void deleteCriticalPath(final int node, final Connection conn) throws SQLException {
        final DBUtils d = new DBUtils(getClass());
        try {
            PreparedStatement stmt = conn.prepareStatement(SQL_DELETE_CRITICAL_PATH);
            d.watch(stmt);
            stmt.setInt(1, node);
            stmt.execute();
        } finally {
            d.cleanUp();
        }
    }

