    void releaseConnection(Connection conn) throws MapsException {
        try {
            if (conn != null && !conn.isClosed()) {
                if (m_factory != null) {
                    conn.close();
                } else {
                    Vault.releaseDbConnection(conn);
                }
            }
        } catch (Throwable e) {
            LOG.error("Exception while releasing connection");
            throw new MapsException(e);
        }
    }

