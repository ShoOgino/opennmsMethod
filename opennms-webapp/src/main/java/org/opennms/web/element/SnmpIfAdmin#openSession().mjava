    /**
     * @throws SocketException
     * @throws Exception
     */
    private void openSession() throws SocketException {
        try {
            m_session = new SnmpSession(m_snmpPeer);
        } catch (SocketException e) {
            if (m_session != null) {
                try {
                    m_session.close();
                } catch (Exception ex) {
                    // to log
                }
            }
            throw e;
        }
    }

