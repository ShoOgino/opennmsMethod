    private String getIfSpeed() throws SQLException {
        String speed = null;
        
        Map intfInfo = IfLabel.getInterfaceInfoFromIfLabel(m_nodeId, m_resource);

        // if the extended information was found correctly
        if (intfInfo != null) {
            speed = (String)intfInfo.get("snmpifspeed");
        }

        return speed;
    }

