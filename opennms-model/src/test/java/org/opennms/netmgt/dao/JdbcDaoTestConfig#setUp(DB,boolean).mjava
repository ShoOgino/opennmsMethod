        OutageFactory.register(m_dataSource);
        EventFactory.register(m_dataSource);
        AgentFactory.register(m_dataSource);
        AlarmFactory.register(m_dataSource);
        
        return new DataSourceTransactionManager(m_dataSource);
    }

