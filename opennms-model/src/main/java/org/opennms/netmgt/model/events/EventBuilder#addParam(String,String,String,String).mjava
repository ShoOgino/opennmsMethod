    public EventBuilder addParam(String parmName, String val, String type, String encoding) {
        if (parmName != null) {
            Value value = new Value();
            value.setContent(val);
            
            if (type != null) {
                value.setType(type);
            }
            
            if (encoding != null) {
                value.setEncoding(encoding);
            }
            
            Parm parm = new Parm();
            parm.setParmName(parmName);
            parm.setValue(value);
            
            addParam(parm);
        }
        
        return this;
    }

