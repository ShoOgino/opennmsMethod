    public BridgePort getBridgePort(Integer nodeid) {
        if (nodeid == null)
            return null;
        for (BridgePort link: m_portsOnSegment) {
                if (link!= null && link.getNode() != null &&
                        link.getNode().getId() != null &&
                        link.getNode().getId().intValue() == nodeid.intValue() )
                    return link;
        }
        return null;        
    }

