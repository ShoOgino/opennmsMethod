    public double getColor() {
        if (type == Type.Alarm) {
            switch (OnmsSeverity.get(getMaximumSeverity())) {
                case WARNING: {
                    return 0.1;
                }
                case MINOR: {
                    return 0.2;
                }
                case MAJOR: {
                    return 0.4;
                }
                case CRITICAL: {
                    return 1.0;
                }
                default: {
                    return 0.0;
                }
            }
        } else {
            if (getServicesTotal() == 0) {
                return 0.0;
            } else {
                return (double) getServicesDown() / (double) getServicesTotal();
            }
        }
    }

