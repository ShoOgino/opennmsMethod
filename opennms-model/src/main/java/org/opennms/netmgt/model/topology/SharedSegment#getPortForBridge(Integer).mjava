    public Integer getPortForBridge(Integer nodeid) {
        if (nodeid == null)
            return null;
        for (BridgePort link: m_portsOnSegment) {
                if (link.getNode() != null 
                        && link.getNode().getId() != null 
                        && link.getNode().getId().intValue() == nodeid.intValue() )
                    return link.getBridgePort();
        }
        return null;
    }

