    public boolean containsPort(Integer nodeid, Integer bridgeport) {
        if (nodeid == null || bridgeport == null) {
            return false;
        }
        for (BridgePort port: m_portsOnSegment) {
        	if (port.getNode().getId() != nodeid) {
        		continue;
        	}
        	if (port.getBridgePort() != bridgeport) {
        		continue;
        	}
        	return true;
        }
        return false;
    }

