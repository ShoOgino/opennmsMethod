    public List<BridgeMacLink> getBridgeMacLinks() {
    	List<BridgeMacLink> maclinks = new ArrayList<BridgeMacLink>();
    	for (String mac: m_macsOnSegment) {
    		for (BridgePort bp: m_portsOnSegment) {
    			maclinks.add(getBridgeMacLink(bp, mac));
    		}
    	}
        return maclinks;
    }

