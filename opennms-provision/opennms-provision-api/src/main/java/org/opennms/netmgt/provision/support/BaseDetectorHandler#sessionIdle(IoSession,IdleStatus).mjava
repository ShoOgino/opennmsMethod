    /** {@inheritDoc} */
    @Override
    public void sessionIdle(IoSession session, IdleStatus status) throws Exception {
        // Make sure that both sides of the conversation are idle before we declare that the banner
        // detection failed.
        //
        // @see http://issues.opennms.org/browse/NMS-5311
        //
        if (getConversation().hasBanner() && status == IdleStatus.BOTH_IDLE) {
            LogUtils.infof(this, "Session went idle without receiving banner. Setting service detection to false.");
            getFuture().setServiceDetected(false);
            session.close(true);
        }
    }

