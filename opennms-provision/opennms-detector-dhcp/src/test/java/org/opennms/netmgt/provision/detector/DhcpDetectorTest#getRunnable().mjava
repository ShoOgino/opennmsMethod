	protected static Runnable getRunnable() throws Exception {
        return new Runnable(){
            
            public void run(){
                Dhcpd dhcpdDeamon = Dhcpd.getInstance();
                try{
                    dhcpdDeamon.init();
                    dhcpdDeamon.start();
                    dhcpdDeamon.run();
                }catch(Exception e){
                    e.printStackTrace();
                } finally {
                    dhcpdDeamon.stop();
                }
            }
            
        };
    }

