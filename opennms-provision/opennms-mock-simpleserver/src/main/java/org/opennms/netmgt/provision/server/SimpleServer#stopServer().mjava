    /**
     * <p>stopServer</p>
     *
     * @throws java.io.IOException if any.
     */
    public void stopServer() throws IOException {
        m_stopped = true;
        getServerSocket().close();
        if(getServerThread() != null && getServerThread().isAlive()) { 
            
            if(getSocket() != null && !getSocket().isClosed()) {
               getSocket().close();  
            }
            
        }
    }

