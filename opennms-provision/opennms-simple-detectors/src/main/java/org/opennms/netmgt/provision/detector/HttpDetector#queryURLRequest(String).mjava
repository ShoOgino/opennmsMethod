    /**
     * 
     * @param url
     * @return
     */
    protected RequestHandler queryURLRequest(final String url) {
        return new RequestHandler() {

            public void doRequest(OutputStream out) throws IOException {
                out.write(String.format("GET %s  HTTP/1.0\r\n\r\n", url).getBytes());                
            }
            
        };
    }

