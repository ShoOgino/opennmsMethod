        private Runnable phaseRunner() {
            return new Runnable() {
                @Override
                public void run() {
                    try {
                        doInvoke(m_phase.getLifeCycleInstance());
                    } catch (final Exception e) {
                        LOG.info("failed to invoke lifecycle instance", e);
                    }
                }
                @Override
                public String toString() {
                    return "Runner for "+m_phase.toString();
                }
            };
        }

