    @Transactional
    public OnmsDistPoller createDistPollerIfNecessary() {
        OnmsDistPoller distPoller = getDistPollerDao().get("localhost");
        if (distPoller == null) {
            distPoller = new OnmsDistPoller("localhost", "127.0.0.1");
            getDistPollerDao().save(distPoller);
        }
        return distPoller;
    }

