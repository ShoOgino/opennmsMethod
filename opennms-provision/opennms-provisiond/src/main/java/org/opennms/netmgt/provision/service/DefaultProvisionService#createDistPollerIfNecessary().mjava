    @Transactional
    public OnmsDistPoller createDistPollerIfNecessary() {
        OnmsDistPoller distPoller = m_distPollerDao.get("localhost");
        if (distPoller == null) {
            distPoller = new OnmsDistPoller("localhost", "127.0.0.1");
            m_distPollerDao.save(distPoller);
        }
        return distPoller;
    }

