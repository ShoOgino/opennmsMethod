    ScheduledFuture<?> schedule(ScheduledExecutorService executor, NodeScanSchedule schedule) {
        
    	final Runnable r = new Runnable() {
            @Override
            public void run() {
                try {
                    
                	final Task t = createTask();
                    t.schedule();
                    t.waitFor();
                    
                    LOG.debug(NodeScan.this, "Finished scanning node {}/{}/{}", getNodeId(), getForeignSource(), getForeignId());
                } catch (final InterruptedException e) {
                    LOG.warn(NodeScan.this, e, "The node scan for node {}/{}/{} was interrupted", getNodeId(), getForeignSource(), getForeignId());
                    Thread.currentThread().interrupt();
                } catch (final ExecutionException e) {
                    LOG.warn(NodeScan.this, e, "An error occurred while scanning node {}/{}/{}", getNodeId(), getForeignSource(), getForeignId());
                }
            }
        };
        
        final ScheduledFuture<?> future = executor.scheduleWithFixedDelay(r, schedule.getInitialDelay().getMillis(), schedule.getScanInterval().getMillis(), TimeUnit.MILLISECONDS);
        return future;
    }

