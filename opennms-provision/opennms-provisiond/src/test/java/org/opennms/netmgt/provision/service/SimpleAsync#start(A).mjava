    public void start(final A a) {
        //debugf("Starting Task %s with value %s", this, a);
        Callable<B> callable = new Callable<B>() {
            public B call() throws Exception {
                return doCompute(a);
            }
        };
        
        m_future.set(m_executor.submit(callable));
        //debugf("Started Task %s", this);
    }

