    private void addTableWithSQL(String table, String sql, boolean addTriggers)
    throws SQLException {
        executeSQL("CREATE TABLE " + table + " ( " + sql + " )");
        
        if (!addTriggers) {
            return;
        }
        
        getInstallerDb().addIndexesForTable(table);
        getInstallerDb().addTriggersForTable(table);
    }

