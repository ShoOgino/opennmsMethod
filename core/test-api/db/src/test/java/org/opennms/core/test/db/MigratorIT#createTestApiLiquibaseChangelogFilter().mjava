    public static final Predicate<Resource> createTestApiLiquibaseChangelogFilter() {
        return r -> {
            try {
                URI uri = r.getURI();
                return (uri.getScheme().equals("file") && uri.toString().contains("test-api/schema")) ||
                        (uri.getScheme().equals("jar") && uri.toString().contains("test-api.schema"));
            } catch (IOException e) {
                return false;
            }
        };
    }

