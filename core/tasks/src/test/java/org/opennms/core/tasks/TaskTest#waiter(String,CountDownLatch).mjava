    private Runnable waiter(final String name, final CountDownLatch latch) {
        return new Runnable() {
            @Override
            public void run() {
                try {
                    latch.await();
                } catch (InterruptedException e) {
                    LogUtils.debugf(this, e, "interrupted waiting for task");
                }
            }
            @Override
            public String toString() {
                return name;
            }
        };
    }

