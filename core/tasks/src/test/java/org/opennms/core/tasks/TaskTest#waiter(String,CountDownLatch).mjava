    private Runnable waiter(final String name, final CountDownLatch latch) {
        return new Runnable() {
            public void run() {
                try {
                    latch.await();
                } catch (InterruptedException e) {
                    // TODO Auto-generated catch block
                    e.printStackTrace();
                }
            }
            public String toString() {
                return name;
            }
        };
    }

