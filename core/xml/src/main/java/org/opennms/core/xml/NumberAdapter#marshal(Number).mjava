    @Override
    public String marshal(final Number v) throws Exception {
        if (v == null) {
            return null;
        }
        final Double d = v.doubleValue();
        if (!d.isNaN() && !d.isInfinite() && d == Math.rint(d)) {
            return String.valueOf(v.intValue());
        }
        return v.toString();
    }

