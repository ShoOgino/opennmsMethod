    public static String iso8601OffsetString(Date d, ZoneId zone, ChronoUnit truncateTo) {
        ZonedDateTime zdt = ((d).toInstant())
                .atZone(zone);
        if(truncateTo != null) {
            zdt = zdt.truncatedTo(truncateTo);
        }
        return zdt.format(DateTimeFormatter.ISO_OFFSET_DATE_TIME);
    }

