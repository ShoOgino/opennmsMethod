    /**
     * <p>resume</p>
     */
    @Override
    final public void resume() {
        
        Logging.withPrefix(getName(), new Runnable() {

            @Override
            public void run() {
                if (!isPaused()) return;

                LOG.info("{} resuming.", getName());

                setStatus(RESUME_PENDING);
                onResume();
                setStatus(RUNNING);

                LOG.info("{} resumed.", getName());
            }
            
        });
    }

