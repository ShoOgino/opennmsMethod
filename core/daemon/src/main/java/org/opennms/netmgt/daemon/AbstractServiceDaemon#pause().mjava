    /**
     * <p>pause</p>
     */
    @Override
    public final void pause() {
        Logging.withPrefix(getName(), new Runnable() {

            @Override
            public void run() {
                if (!isRunning()) return;

                LOG.info("{} pausing.", getName());

                setStatus(PAUSE_PENDING);
                onPause();
                setStatus(PAUSED);

                LOG.info("{} paused.", getName());
            }
            
        });
    }

