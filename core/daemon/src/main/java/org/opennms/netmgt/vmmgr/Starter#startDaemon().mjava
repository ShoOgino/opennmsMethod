    /**
     * <p>startDaemon</p>
     */
    public void startDaemon() {
    	try {
    		configureLog4j();

    		setLogPrefix();

    		setupMx4jLogger();

    		loadGlobalProperties();

    		setDefaultProperties();

    		start();
    	} catch(Exception e) {
    		die("Exception during startup: " + e.getMessage(), e);
    	}
    }

