    /**
     * <p>stop</p>
     */
    @Override
    public final void stop() {
        Logging.withPrefix(getLoggingPrefix(), new Runnable() {

            @Override
            public void run() {
                
                setStatus(Fiber.STOP_PENDING);

                if (m_context != null) {
                    m_context.close();
                }
                
                setStatus(Fiber.STOPPED);
            }
            
        });
    }

