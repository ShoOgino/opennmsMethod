    public sockaddr_in6(int family, byte[] addr, byte[] port) {
        sin6_family = (short)(0xffff & family);
        assertLen("port", port, 2);
        sin6_port = port;
        sin6_flowinfo = new byte[4];
        assertLen("address", addr, 16);
        sin6_addr = addr;
        sin6_scope_id = new byte[4];
    }

