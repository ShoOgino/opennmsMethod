	@Override
	public Long ping(InetAddress host, long timeout, int retries) throws Exception {

		AbstractPinger listener = host instanceof Inet4Address ? new V4Pinger() : new V6Pinger();
		listener.start();

		long rtt = listener.ping(host, 12345, 1, timeout);

		listener.stop();
		return rtt;
	}

