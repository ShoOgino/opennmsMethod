    public void update(long sample) {
        m_count++;
        double oldAvg = m_average;
        m_average += (sample - oldAvg)/m_count;
        m_sumOfSquaresOfDifferences += (sample - getAverage())*(sample - oldAvg);
        m_min = Math.min(m_min, sample);
        m_max = Math.max(m_max, sample);
    }

