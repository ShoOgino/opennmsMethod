    @Test
    public void testMultiThreadSocketUse() throws Exception {
        int pingCount = 10;
        V4Pinger listener = new V4Pinger();
        try {
        listener.start();
        
        listener.ping(InetAddress.getByName("127.0.0.1"), 1000, pingCount, 1000);
        
        } finally {
            listener.stop();
            listener.closeSocket();
            
        }
    }

