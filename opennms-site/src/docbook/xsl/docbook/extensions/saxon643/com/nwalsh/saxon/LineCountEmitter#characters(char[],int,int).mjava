  /** Process characters. */
  public void characters(char[] chars, int start, int len)
    throws javax.xml.transform.TransformerException {

    if (numLines == 0) {
      // If there are any characters at all, there's at least one line
      numLines++;
    }

    for (int count = start; count < start+len; count++) {
      if (chars[count] == '\n') {
	numLines++;
      }
    }
  }

