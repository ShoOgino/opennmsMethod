  public static boolean getBoolean(ExpressionContext context,
				   String varName) {
    String stringValue = getString(context, varName);
    if (stringValue != null) {
      if (stringValue.equals("0") || stringValue.equals("")) {
	return false;
      } else {
	return true;
      }
    } else {
      return false;
    }
  }

