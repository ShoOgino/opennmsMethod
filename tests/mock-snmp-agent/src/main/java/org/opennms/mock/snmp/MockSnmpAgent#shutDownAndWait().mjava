    /**
     * <p>shutDownAndWait</p>
     *
     * @throws java.lang.InterruptedException if any.
     */
    public void shutDownAndWait() throws InterruptedException {
        if (!isRunning()) {
            return;
        }

        shutDown();

        while (!isStopped()) {
            Thread.sleep(10);
        } 
    }

