    /** {@inheritDoc} */
    @Override
    protected void initTransportMappings() throws IOException {
        try {
            transportMappings = new TransportMapping[1];
            transportMappings[0] =
                new DefaultUdpTransportMapping(new UdpAddress(m_address));
        } catch (final IOException e) {
            m_failure = e;
            throw e;
        }
    }

