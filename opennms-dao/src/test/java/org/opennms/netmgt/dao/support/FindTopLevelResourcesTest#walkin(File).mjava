    public void walkin(File dir) {
        File listFile[] = dir.listFiles();
        if (listFile != null) {
            for (int i=0; i<listFile.length; i++) {
                if (listFile[i].isDirectory()) {
                  walkin(listFile[i]);
                } else {
                    System.out.println(listFile[i]);
                }
            }
        }
    }

