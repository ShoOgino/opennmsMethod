    public AgentSaveOrUpdate(DataSource ds, String updateStmt) {
        setDataSource(ds);
        setSql(updateStmt);
        
        // assumes that the update and insert statements have the same parms in the same order
        declareParameter(new SqlParameter(Types.VARCHAR));   // dpName
        declareParameter(new SqlParameter(Types.TIMESTAMP)); // nodeCreateTime
        declareParameter(new SqlParameter(Types.INTEGER));   // nodeParentID
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeType
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeSysOid
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeSysName
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeSysDescription
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeSysLocation
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeSysContact
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeLabel
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeLabelSource
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeNetBiosName
        declareParameter(new SqlParameter(Types.VARCHAR));   // nodeDomainName
        declareParameter(new SqlParameter(Types.VARCHAR));   // operationsSystem
        declareParameter(new SqlParameter(Types.TIMESTAMP)); // lastCapsdPoll
        declareParameter(new SqlParameter(Types.INTEGER));   // nodeId
        
        
        compile();
    }

