    public boolean databaseUserExists() throws SQLException {
        assertUserSet();

        boolean exists;

        Statement st = getAdminConnection().createStatement();
        ResultSet rs = st.executeQuery("SELECT usename FROM pg_user WHERE "
                + "usename = '" + m_user + "'");

        exists = rs.next();

        rs.close();
        st.close();

        return exists;
    }

