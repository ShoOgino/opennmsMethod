    @PostConstruct
    public void init() {
        // we call this, to ensure the bean-initialization is blocked, until it is initialized
        dataSourceSync();

        if (refreshRate > 0) {
            refreshTimer.schedule(new TimerTask() {
                @Override
                public void run() {
                    dataSourceSync();
                }
            }, refreshRate, refreshRate);
        }
    }

