    public DemandPollSaveOrUpdate(DataSource ds, String updateStmt) {
        setDataSource(ds);
        setSql(updateStmt);
        
        // assumes that the update and insert statements have the same parms in the same order
        declareParameter(new SqlParameter(Types.TIMESTAMP));   // requestTime
        declareParameter(new SqlParameter(Types.VARCHAR)); // user
        declareParameter(new SqlParameter(Types.VARCHAR));   // description
        declareParameter(new SqlParameter(Types.INTEGER));   // id
        
        compile();
    }

