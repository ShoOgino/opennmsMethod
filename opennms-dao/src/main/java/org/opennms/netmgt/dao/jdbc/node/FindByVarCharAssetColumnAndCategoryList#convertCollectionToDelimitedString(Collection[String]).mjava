    private static String convertCollectionToDelimitedString(Collection<String> col) {
        StringBuffer sb = null;
        
        for (Iterator it = col.iterator(); it.hasNext();) {
            String colStr = (String) it.next();
            sb.append(colStr);
            if (it.hasNext()) {
                sb.append(',');
            }
        }
        return sb.toString();
    }

