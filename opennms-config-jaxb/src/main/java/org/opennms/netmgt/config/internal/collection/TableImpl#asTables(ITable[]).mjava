    public static TableImpl[] asTables(final ITable[] tables) {
        if (tables == null) return null;
        
        final TableImpl[] newTables = new TableImpl[tables.length];
        for (int i=0; i < tables.length; i++) {
            newTables[i] = TableImpl.asTable(tables[i]);
        }
        return newTables;
    }

