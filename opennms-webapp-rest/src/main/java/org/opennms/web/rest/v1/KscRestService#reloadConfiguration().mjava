    @PUT
    @Path("reloadConfig")
    @Transactional
    public Response reloadConfiguration() {
        writeLock();
        try {
            KSC_PerformanceReportFactory.getInstance().reload();
            return Response.noContent().build();
        } catch (Exception e) {
            throw getException(Status.INTERNAL_SERVER_ERROR, e);
        } finally {
            writeUnlock();
        }
    }

