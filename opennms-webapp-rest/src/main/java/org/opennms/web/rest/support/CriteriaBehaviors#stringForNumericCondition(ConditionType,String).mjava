    private static String stringForNumericCondition(ConditionType c, String property) {
        String op = "";
        switch (c) {
        case EQUALS:
            op = " = ";
            break;
        case NOT_EQUALS:
            op = " != ";
            break;
        case LESS_THAN:
            op = " < ";
            break;
        case GREATER_THAN:
            op = " > ";
            break;
        case LESS_OR_EQUALS:
            op = " <= ";
            break;
        case GREATER_OR_EQUALS:
            op = " >= ";
            break;
        default:
            throw new IllegalArgumentException("Illegal condition type when filtering " + property + ": " + c.toString());
        }
        return op;
    }

