	private File[] getPluginDirs() throws Exception {
		
		if (!m_configDirectory.exists()) {
			return new File[0];
		}

		File[] pluginDirs = m_configDirectory.listFiles(new FileFilter() {
			
			@Override
			public boolean accept(File file) {
				return file.isDirectory();
			}
		});
		return pluginDirs;
	}

